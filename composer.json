{
    "name": "kgilden/pager",
    "description": "A paginator library to split results into multiple pages",
    "keywords": ["pager", "paginator", "pagination", "library"],
    "license": "MIT",
    "authors": [
        {
            "name": "Kristen Gilden",
            "email": "kristen.gilden@gmail.com"
        }
    ],
    "minimum-stability": "stable",
    "conflict": {
        "doctrine/orm": "<2.3",
        "symfony/http-foundation": "<2.4",
        "ruflin/elastica": "<0.90.1.0"
    },
    "require": {
        "php": "^7.4"
    },
    "require-dev": {
        "doctrine/orm": "^2.4",
        "symfony/http-foundation": "^4.4|^5.4",
        "symfony/config": "^4.4|^5.4",
        "symfony/dependency-injection": "^4.4|^5.4",
        "symfony/http-kernel": "^4.4|^5.4",
        "ruflin/elastica": ">=0.90.1.0",
        "phpunit/phpunit": "^8.2.3",
        "twig/twig": "^1.43|^2.7",
        "symfony/yaml": "^5.1"
    },
    "autoload": {
        "psr-4": {"KG\\Pager\\": "src/"}
    },
    "suggest": {
        "doctrine/orm": "^2.4, if you're using DqlAdapter",
        "symfony/http-foundation": "~2.4 for automatic current page detection",
        "ruflin/elastica": ">=0.90.1.0 to use ElasticaAdapter",
        "twig/twig": "^1.43|^2.7 to use the Twig Extension",
        "ext-mongo": "to use MongoAdapter"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "2.0-dev"
        }
    }
}
